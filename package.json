{
  "name": "root",
  "private": true,
  "dependencies": {
    "lerna": "^3.20.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-react": "^7.18.0",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap",
    "build": "lerna run build",
    "lint": "eslint -c .eslintrc.js --ignore-pattern '**/node_modules/' . --ext .ts,.tsx",
    "lint-errors": "eslint --quiet -c .eslintrc.js --ignore-pattern '**/node_modules/' . --ext .ts,.tsx",
    "create-db": "cd packages/backend && npm run migrate up",
    "create-test-db": "cd packages/backend && npm run create-test-db",
    "start": "lerna run start --stream",
    "start-local": "lerna run build && lerna run start-local --stream",
    "start-dev": "lerna run start-dev --stream"
  }
}
